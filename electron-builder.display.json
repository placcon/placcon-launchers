{
  "appId": "com.placcon.display",
  "productName": "${env:PLACCON_ENV,test,PlaccOn Vevőkijelző TEST,PlaccOn Vevőkijelző}",
  "mac": {
    "target": [
      "dmg"
    ],
    "identity": null,
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "entitlements": null,
    "entitlementsInherit": null,
    "icon": "src/assets/favicon${env:PLACCON_ENV,test,-test,}.icns"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "icon": "src/assets/favicon${env:PLACCON_ENV,test,-test,}.ico"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "src/assets/favicon${env:PLACCON_ENV,test,-test,}.png"
  },
  "extraResources": [
    {
      "from": "src/assets",
      "to": "assets"
    },
    {
      "from": "node_modules/ffmpeg-static/ffmpeg.exe",
      "to": "ffmpeg.exe"
    },
    {
      "from": "node_modules/ffmpeg-static/ffmpeg",
      "to": "ffmpeg"
    }
  ],
  "files": [
    "src/**/*",
    "main.js",
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
  ],
  "asar": true,
  "asarUnpack": [
    "node_modules/ffmpeg-static/*"
  ],
  "extraMetadata": {
    "main": "main.js"
  },
  "extraFiles": [
    {
      "from": "src/main.js",
      "to": "src/main.js"
    }
  ],
  "buildDependenciesFromSource": true,
  "npmRebuild": true,
  "mac": {
    "target": [
      "dmg"
    ],
    "identity": null,
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "entitlements": null,
    "entitlementsInherit": null,
    "icon": "src/assets/favicon${env:PLACCON_ENV,test,-test,}.icns",
    "darkModeSupport": true
  }
}